<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_3"
    tools:context=".UpdateProfileActivity"
    >
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_weight="4"
            android:id="@+id/edtUpdateUsernameUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Unavailable"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imgEditUsernameUser"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email           "
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvEmail"
            android:layout_weight="4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Unavailable"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender      "
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_weight="4"
            android:id="@+id/edtUpdateGenderUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Unavailable"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imgEditGenderUser"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday  "
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_weight="4"
            android:id="@+id/edtUpdateBirthdayUser"
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Unavailable"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imgEditBirthdayUser"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone      "
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_weight="4"
            android:id="@+id/edtUpdatePhoneNumberUser"
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Unavailable"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imgEditPhoneNumberUser"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address  "
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_weight="4"
            android:id="@+id/edtUpdateAddressUser"
            android:layout_marginLeft="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Unavailable"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/imgEditAddressUser"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            />
    </LinearLayout>

    <Button
        android:background="@drawable/rounded_button_solid"
        android:id="@+id/btnSaveChanges"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Changes"
        android:textAllCaps="false"
        />


</LinearLayout>